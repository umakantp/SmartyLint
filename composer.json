{
  "name": "umakantp/smartylint",
  "type": "library",
  "description": "SmartyLint is a PHP program that finds problems in Smarty files. It is tool that can be used for helping yourself for writing clean Smarty template files.",
  "homepage": "https://github.com/umakantp/SmartyLint",
  "license": "BSD-3-Clause",
  "authors": [
    {
      "name": "Umakant Patil",
      "email": "lars@intraface.dk"
    }
  ],
  "autoload": {
    "psr-4": {
      "SmartyLint\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "SmartyLint\\Tests\\": "tests"
    }
  },
  "require": {
    "php": ">=5.3.2"
  },
  "require-dev": {
    "phpunit/phpunit": "4.8.*",
    "squizlabs/php_codesniffer": "2.8.*",
    "satooshi/php-coveralls": "1.0.1"
  }
}
